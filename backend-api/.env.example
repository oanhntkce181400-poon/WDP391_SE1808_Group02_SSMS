########################################
# SchoolSys Backend - Local Environment
########################################

##########
# Server #
##########
PORT=3000

############
# MongoDB  #
############
# Prefer Atlas for team dev. Replace the placeholders below.
# Tip: keep the DB name the same across the team.

# Atlas parts (for readability when pasting)
MONGODB_ATLAS_USERNAME=<ATLAS_USERNAME>
MONGODB_ATLAS_PASSWORD=<ATLAS_PASSWORD>
MONGODB_ATLAS_CLUSTER=<ATLAS_CLUSTER_HOST>
# Example cluster host: cluster0.abcde.mongodb.net

# Connection string used by the app (REQUIRED)
MONGODB_URI=mongodb+srv://<ATLAS_USERNAME>:<ATLAS_PASSWORD>@<ATLAS_CLUSTER_HOST>/?retryWrites=true&w=majority&appName=wdp-backend

# Local alternative (uncomment if needed)
# MONGODB_URI=mongodb://127.0.0.1:27017

# Database and driver tuning
MONGODB_DB_NAME=wdp301
MONGODB_APP_NAME=wdp-backend
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIGRATIONS_COLLECTION=__migrations

########
# CORS #
########
# Comma-separated origins. Must include your frontend origin(s).
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

#######
# JWT #
#######
# Replace secrets in real environments.
JWT_ACCESS_SECRET=dev-access-secret-change-me
JWT_REFRESH_SECRET=dev-refresh-secret-change-me
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

###########
# Cookies #
###########
ACCESS_TOKEN_COOKIE_NAME=at
REFRESH_TOKEN_COOKIE_NAME=rt
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

##########
# Google #
##########
# Use the OAuth "Client ID" from Google Cloud Console.
GOOGLE_CLIENT_ID=<GOOGLE_OAUTH_CLIENT_ID>

########
# Mail #
########
# SMTP settings (Gmail app password recommended for dev)
MAIL_ENABLED=true
MAIL_FROM_NAME=SchoolSys
MAIL_FROM_EMAIL=<SENDER_EMAIL>
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=<SMTP_USERNAME>
SMTP_PASS=<SMTP_APP_PASSWORD>

############
# Defaults #
############
DEFAULT_USER_ROLE=student

################
# Cloudinary   #
################
# Get these credentials from: https://console.cloudinary.com/
CLOUDINARY_CLOUD_NAME=<YOUR_CLOUD_NAME>
CLOUDINARY_API_KEY=<YOUR_API_KEY>
CLOUDINARY_API_SECRET=<YOUR_API_SECRET>
